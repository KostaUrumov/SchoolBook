@using Microsoft.AspNetCore.Identity
@using SchoolBook_Structure.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="logout">Излез</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Login">Логин</a>
        </li>
    }
</ul>
