@model StudentExam


<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <div class="form-floating">
                <input asp-for="@Model.StudentId" class="form-control" autocomplete="Date" aria-required="true" />
                StudentId
            </div>
            
            <div class="form-floating">
                <input asp-for="@Model.ExamId" class="form-control" autocomplete="Date" aria-required="true" />
                <label asp-for="@Model.ExamId"></label>
            </div>

            <div class="form-floating">
                <input asp-for="@Model.Score" class="form-control" autocomplete="Date" aria-required="true" />
                <label asp-for="@Model.Score"></label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Запиши оценка</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}