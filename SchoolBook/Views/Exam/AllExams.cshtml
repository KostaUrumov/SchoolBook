@model List<ShowExamModel>

@{
    ViewData["Title"] = "Всички изпити";
}

<div class="text-center">
    <h2>@ViewBag.Title</h2>
</div>

<div class="text-center row">
    @foreach (var exam in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <div class="card-body">
                <p class="mb-0">Предмет: @exam.Discimpline</p>
                <p class="mb-0">Дата: @exam.Date</p>
                @if (User.IsInRole("Teacher"))
                {
                    <form class="input-group-sm" asp-route-examId="@exam.Id" asp-controller="Exam" asp-action="Participants" method="post">
                        <input type="submit" value="Ученици на изпит" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>
                    <form class="input-group-sm" asp-route-examId="@exam.Id" asp-controller="Teacher" asp-action="LoadStudents" method="post">
                        <input type="submit" value="Добави Ученици" class="fs-6 btn btn-success mb-3 p-2" />
                    </form>

                }
            </div>
        </div>
    }
</div>