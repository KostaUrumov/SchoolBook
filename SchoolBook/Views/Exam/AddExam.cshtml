@model AddExamModel
@{
    ViewData["Title"] = "Добави Изпит";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.Disciplibe" class="form-control" autocomplete="Discipline" aria-required="true" />
                <label asp-for="@Model.Disciplibe"></label>
                <span asp-validation-for="@Model.Disciplibe" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.ExamDate" class="form-control" autocomplete="Date" aria-required="true" />
                <label asp-for="@Model.ExamDate"></label>
                <span asp-validation-for="@Model.ExamDate" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Добави изпит</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}